# =============================================================================
# Telegram Weather Bot for Paragliders - Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# TELEGRAM BOT SETTINGS
# -----------------------------------------------------------------------------
# Bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# -----------------------------------------------------------------------------
# WEATHER API KEYS
# -----------------------------------------------------------------------------
# OpenWeatherMap API key (https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# VisualCrossing API key (https://www.visualcrossing.com/)
VISUALCROSSING_API_KEY=your_visualcrossing_api_key_here

# -----------------------------------------------------------------------------
# TIMING SETTINGS
# -----------------------------------------------------------------------------
# Timezone for time windows (e.g., Europe/Moscow, UTC, America/New_York)
TIMEZONE=Europe/Moscow

# Interval between weather checks in minutes
POLLING_INTERVAL_MINUTES=30

# Delay between API requests in seconds (to avoid rate limiting)
API_REQUEST_DELAY_SECONDS=2

# -----------------------------------------------------------------------------
# LOGGING SETTINGS
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# DEBUG MODE
# -----------------------------------------------------------------------------
# When enabled, sends diagnostic messages to admins after each API call
# Values: true/false, 1/0, yes/no
DEBUG_MODE=false

# -----------------------------------------------------------------------------
# DATABASE SETTINGS
# -----------------------------------------------------------------------------
# Path to SQLite database file
DATABASE_PATH=database/weather_bot.db

# -----------------------------------------------------------------------------
# ADMIN SETTINGS
# -----------------------------------------------------------------------------
# Comma-separated list of Telegram user IDs who are global admins
# Example: ADMIN_USER_IDS=123456789,987654321
ADMIN_USER_IDS=
